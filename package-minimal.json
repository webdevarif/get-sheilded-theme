{
  "name": "get-shielded-theme",
  "version": "1.0.0",
  "description": "Modern WordPress theme with OOP architecture, React admin, and Gutenberg blocks",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:admin\" \"npm run dev:gutenberg\"",
    "dev:frontend": "webpack --mode development --watch --config webpack.frontend.js",
    "dev:admin": "vite build --watch --config vite.admin.config.js",
    "dev:gutenberg": "webpack --mode development --watch --config webpack.gutenberg.js",
    "build": "npm run build:frontend && npm run build:admin && npm run build:gutenberg",
    "build:frontend": "webpack --mode production --config webpack.frontend.js",
    "build:admin": "vite build --config vite.admin.config.js",
    "build:gutenberg": "webpack --mode production --config webpack.gutenberg.js",
    "ui:init": "shadcn-ui@latest init",
    "ui:add": "shadcn-ui@latest add"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "gsap": "^3.12.2",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.3",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.6",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "keywords": [
    "wordpress",
    "theme",
    "react",
    "gutenberg",
    "shadcn",
    "gsap"
  ],
  "author": "Your Name",
  "license": "GPL-2.0+"
}
